<% if (typeof articleCard === 'undefined') { articleCard = []; } %>
<div class="article-card">
  <a class="article-card__inner" href="<%- articleCard.link %>">
    <figure class="article-card__image">
      <img src="<%- articleCard.imgPath %>" alt="<%- articleCard.alt %>" />
    </figure>
    <div class="article-card__body">
      <date class="article-card__date" date-time="<%- articleCard.datetime %>"
        ><%- articleCard.date %></date
      >
      <div class="article-card__title"><%- articleCard.title %></div>
    </div>
  </a>
</div>
